# ReLock Backend Environment Configuration
# Copy this file to .env and update the values

#--------------------------------------------------------------------------
# Application Settings
#--------------------------------------------------------------------------
APP_NAME="ReLock"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000
APP_VERSION=1.0.0

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

#--------------------------------------------------------------------------
# Localization
#--------------------------------------------------------------------------
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

#--------------------------------------------------------------------------
# Security & Encryption
#--------------------------------------------------------------------------
APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------
# SQLite (default for development)
DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# MySQL (recommended for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=relock
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=relock
# DB_USERNAME=postgres
# DB_PASSWORD=

#--------------------------------------------------------------------------
# Session & Cache
#--------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=relock_cache_

#--------------------------------------------------------------------------
# Queue Configuration
#--------------------------------------------------------------------------
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

#--------------------------------------------------------------------------
# Logging
#--------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#--------------------------------------------------------------------------
# Sanctum (API Authentication)
#--------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:5173,127.0.0.1,127.0.0.1:8000,::1

#--------------------------------------------------------------------------
# Redis (for production caching/sessions)
#--------------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail Configuration
#--------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@relock.id"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# AWS Configuration (Optional - for S3 storage)
#--------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# Vite
#--------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# Production Settings (uncomment for production)
#--------------------------------------------------------------------------
# APP_ENV=production
# APP_DEBUG=false
# BCRYPT_ROUNDS=14
# SESSION_DRIVER=redis
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# LOG_CHANNEL=stack
# LOG_LEVEL=error

